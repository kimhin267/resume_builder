<div id='sign_in_error'>
	<%if params[:login_error] or params[:need_login] %>
		<span class='alert alert-error bold'>	
			<%= '* ' %>
			<%= params[:login_error] %>
			<%= params[:need_login] %>
			<%= params[:email_do_not_exists] %>
		</span>
	<%elsif params[:email_do_not_exists] %> 
		<span class='alert alert-error bold'>	
			<%= '* ' %>
			<%= params[:email_do_not_exists] %>
			<%= 'Please click ' %>
			<a href="/signup_page">here</a>
			<%= ' to signup.' %>
		</span>
	<%end%>
	<div><br></div>
</div>

<div id='signin_form' >
	<div>
		<div class='well well-small lightcyan'>
			<div>
				<div>Signin</div><br>
			
				<form class='form-horizontal' action="/signin" method="post">
					<div class='control-group'>
						<label class='control-label'>Email: </label>
						<div class='controls'>
							<input type="text" name="login[email_address]" placeholder='Email'/>
						</div>
					</div>

					<div class='control-group'>
						<label class='control-label'>Password: </label>
						<div class='controls'>
							<input type="password" id="inputPassword" name="login[password]" placeholder='Password' /s>
						</div>
					</div>

					<div class="control-group">
					   	<div>
					    	<br><button type="submit" class="btn span5 btn-primary">Signin</button>
					    </div>
					</div>
				</form>
			</div>
		</div>
	</div>

	<div >
		<a class="btn span5 lightcyan" id="signup_btn" href="/signup_page">Signup</a>	
	</div>
</div>


