<div class='nav-background'>
	<ul class = 'nav nav-tabs'>
		<li><a href="/">BR</a></li>
		<li><a href="/create_resume">Create Resume</a></li>
		<li><a href="/my_resumes">View Resumes</a></li>
		<li>
			<% if session['user'].nil? %>
			<a href="/signin_page">Sign in</a>
			<%end%>
		</li>
		<li class='active'>
			<% if session['user'].nil? %>
			<a href="">Sign up</a>
			<%end%>
		</li>
		<li>
			<% if session.has_key?('user') %>
				<a href="/logout">Logout</a>
			<% end %>
		</li>
	</ul>
</div>


<%if params[:email_taken_error] or params[:empty_signup_field] or params[:not_email] or params[:password_error] %>
	<div class='error-form'>
		<div class='error-form-message bold'>	
			<%='* '%>
			<%= params[:email_taken_error] %>
			<%= params[:empty_signup_field] %>
			<%= params[:not_email] %>
			<%= params[:password_error] %>
		</div>
	</div>
<%end%><br/>


<div id='signup_form'>
	<div>
		<div class='well well-small lightcyan'>			
			<div>
				<div>Sign up</div><br>

				<form class='form-horizontal' action="/signup" method="post">
					<div class='control-group'>
						<label class='control-label'>Email: </label>
						<div class='controls'>
							<input placeholder='Email' type="text" name="sign_up[email_address]" />
						</div>
					</div>


					<div class='control-group'>
						<label class='control-label'>Password: </label>
						<div class='controls'>
							<input placeholder='Password' type="password" name="sign_up[password]" /> 
						</div>

						<div class='error_message text-center'>
							<h6>**Password requirement: 8 or more characters** </h5>
						</div>
					</div>
					
					<div class="control-group">
			    		<div>
			      			<br><button type="submit" class="btn btn-primary span5">Signup</button>
			    		</div>
			  		</div>
				</form>	
			</div>
		</div>
	</div>
</div>