<div>
	<ul class = 'nav nav-tabs'>
		<li><a href="/">BR</a></li>
		<li><a href="/create_resume">Create Resume</a></li>
		<li class='active'><a href="/my_resumes">View Resumes</a></li>
		<li>
			<% if session['user'].nil? %>
			<a href="/signin_signup_page">Signin/Signup</a>
			<%end%>
		</li>
		<li>
			<% if session.has_key?('user') %>
				<a href="/logout">Logout</a>
			<% end %>
		</li>
	</ul>
</div>

<div id='resume-container'>
	<ul id='resume-list'>
		<div class='well well-small' id='resume-list-container'>
			<% @resumes.each do |resume| %>
				<li >
					<span class='pull-left span4' id='center-resume-title'><%= resume[1] %></span>
					<a class='btn btn-info span2' href="/view_resumes/<%= resume[0] %>">View Resume</a>
					<form action='/view_resumes/<%= resume[0] %>' method="post">
						<input name="_method" type='hidden' value='delete'>
						<input class='btn btn-danger' type='submit' value='Delete'>
					</form>
				</li>	
			<%end%>
		</div>
	</ul>
</div>