<div>
	<ul class = 'nav nav-tabs'>
		<li><a href="/">BR</a></li>
		<li><a href="/create_resume">Create Resume</a></li>
		<li class='active'><a href="/my_resumes">View Resumes</a></li>
		<li>
			<% if session['user'].nil? %>
			<a href="/signin_signup_page">Signin/Signup</a>
			<%end%>
		</li>
		<li>
			<% if session.has_key?('user') %>
				<a href="/logout">Logout</a>
			<% end %>
		</li>
	</ul>
</div>

<div class='resume'>
	<ul>
		<% @resumes.each do |resume| %>
			<li><%= resume[1] %>
				<div>
					<a class='btn' href="/view_resumes/<%= resume[0] %>">View Resume</a>
				</div>
				<div>
					<form action='/view_resumes/<%= resume[0] %>' method="post">
						<input name="_method" type='hidden' value='delete'>
						<input class='btn' type='submit' value='Delete'>
					</form>
				</div>
			</li>	
		<%end%>
	</ul>
</div>