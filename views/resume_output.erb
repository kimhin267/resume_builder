<div>
	<ul class = 'nav nav-tabs'>
		<li><a href="/">BR</a></li>
		<li class='active'><a href="/create_resume">Create Resume</a></li>
		<li><a href="/my_resumes">View Resumes</a></li>
		<li>
			<% if session['user'].nil? %>
			<a href="/signin_signup_page">Signin/Signup</a>
			<%end%>
		</li>
		<li>
			<% if session.has_key?('user') %>
				<a href="/logout">Logout</a>
			<% end %>
		</li>
	</ul>
</div>

<div id="topheader">
	<span id="name"><%= @resume['first_name'] + ' ' + @resume['last_name'] %></span> <span id="email"><%= @resume['email_address'] %></span>	
	</div>
	<div id="botborders"></div>
	<h1><%= @resume['home_address'] + ' | ' + @resume['city'] + ' | ' + @resume['state'] + ' | ' + @resume['zip_code'] + ' | ' + @resume['telephone_number'] %></h1>
	
<div class="resume_row">
	<div class="experience">
		<h1>Education</h1>
	</div>

	<div class="job">
		<h1><%= @resume['school'] + ', ' + @resume['school_city'] + ', ' + @resume['school_state'] %></h1>
		<h3><i><%= @resume['degree'] + ', Graduation date: ' + @resume['graduation_date'] %></i></h3>
		<h3><b>Major:</b><%= @resume['major'] %></h3>
		<h3><b>GPA:</b><%= @resume['gpa'] %></h3>
 	</div>
</div>

<div class="resume_row">
	<div class="experience">
		<h1>Experience</h1>
	</div>
	<div class="job">
		<h1><%= @resume['company_name'] %></h1>
		<h2><%= @resume['position'] %></h2>
		<ul>
			<li><%= @resume['job_skills'] %></li>
 		</ul>
 	</div>
	<div class="date">
		<p><%= @resume['job_start'] + ' - ' + @resume['job_end'] %></p>
	</div>
</div>
	
<div class="resume_row">
	<div class="experience">
		<h1>Skills</h1>
	</div>
	<div class="job">
		<h1></h1>
		<ul>
			<li><%= @resume['skills']%></li>
		</ul>
	</div>
</div>