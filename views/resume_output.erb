<div class='well well-small'>
	<div id="topheader">
		<h4 id="name"><%= @resume['first_name'] + ' ' + @resume['last_name'] %></h4> <h4 id="email"><%= @resume['email_address'] %></h4>	
	</div>
		<div id="botborders"></div>
		<h4><%= @resume['home_address'] + ' | ' + @resume['city'] + ' | ' + @resume['state'] + ' | ' + @resume['zip_code'].to_s + ' | ' + @resume['telephone_number'].to_s %></h4>
		
	<div class="resume_row">
		<div class="experience">
			<h4>Education</h4>
		</div>

		<div class="job">
			<h1><%= @resume['school'] + ', ' + @resume['school_city'] + ', ' + @resume['school_state'] %></h1>
			<h3><i><%= @resume['degree'] + ', Graduation date: ' + @resume['graduation_date'] %></i></h3>
			<h3><b>Major:</b><%= @resume['major'] %></h3>
			<h3><b>GPA:</b><%= @resume['gpa'].to_s %></h3>
	 	</div>
	</div>

	<div class="resume_row">
		<div class="experience">
			<h1>Experience</h1>
		</div>
		<div class="job">
			<h1><%= @resume['company_name'] %></h1>
			<h2><%= @resume['position'] %></h2>
			<ul>
				<li><%= @resume['job_skills'] %></li>
	 		</ul>
	 	</div>
		<div class="date">
			<p><%= @resume['job_start'] + ' - ' + @resume['job_end'] %></p>
		</div>
	</div>
		
	<div class="resume_row">
		<div class="experience">
			<h1>Skills</h1>
		</div>
		<div class="job">
			<h1></h1>
			<ul>
				<li><%= @resume['skills']%></li>
			</ul>
		</div>
	</div>
</div>