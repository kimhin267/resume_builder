<div class='well well-small'>
	<div id="topheader">
		<h4 id="name"><%= @resume['first_name'] + ' ' + @resume['last_name'] %></h4> <h4 id="email"><%= @resume['email_address'] %></h4>	
	</div>
		<div id="botborders"></div>
		<h4><%= @resume['home_address'] + ' | ' + @resume['city'] + ' | ' + @resume['state'] + ' | ' + @resume['zip_code'].to_s + ' | ' + @resume['telephone_number'].to_s %></h4>
		
	<div class="resume_row">
		<div class="experience">
			<h4>Education</h4>
		</div>

		<div class="job">
			<% @resume.educations.each do |i| %>
				<h1><%= i['school'] + ', ' + i['school_city'] + ', ' + i['school_state'] %></h1>
				<h3><i><%= i['degree'] + ', Graduation date: ' + i['graduation_date'] %></i></h3>
				<h3><b>Major:</b><%= i['major'] %></h3>
				<h3><b>GPA:</b><%= i['gpa'].to_s %></h3>
			<%end%>
		</div>
	</div>

	<div class="resume_row">
		<div class="experience"><h1>Experience</h1></div>

		<div class="job">
			<% @resume.jobs.each do |i| %>
				<h1><%= i['company_name'] %></h1>
				<h2><%= i['position'] %></h2>
				<ul>
					<li><%= i['job_skills'] %></li>
		 		</ul>
		 		<div class="date">
					<p><%= i['job_start'] + ' - ' + i['job_end'] %></p>
				</div>
			<%end%>
		</div>
	</div>

	<div class="resume_row">
		<div class="experience">
			<h1>Skills</h1>
		</div>
		<div class="job">
			<% @resume.otherskills.each do |i| %>
				<ul>
					<li><%= i['skills']%></li>
				</ul>
			<%end%>
		</div>
	</div>
</div>