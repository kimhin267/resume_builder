<div>
	<ul class = 'nav nav-tabs'>
		<li><a href="/home">Home</a></li>
		<li><a href="/create_resume">Create Resume</a></li>
		<li><a href="/my_resumes">View Resumes</a></li>
		<li>
			<% if session.has_key?('user') %>
				<a href="/logout">Logout</a>
			<% end %>
		</li>
	</ul>
</div>

<div class='error_message'>
	<h4><%= params['need_login'] %>
</div>

<div id='signin_form'>
	<div id='sign_in_error'>
		<%= params[:login_error] %>
		<div><br></div>
	</div>

	<div>Signin</div>

	<form action="/signin" method="post">
		<div>
			<label>Email: </label>
		</div>
		<div>
			<input type="text" name="login[email_address]" />
		</div>
		<div>
			<label>Password: </label>
		</div>
		<div>
			<input type="password" name="login[password]" /s>
		</div>
		<input type="submit" value="Login"/>
	</form>
</div>

<div id='signup_form'>
	<form action="/signup" method="post">
		<div id='sign_up_error'>
			<%= params[:signup_error] %>
			<%= params[:empty_signup_field] %>
			<div><br></div>

		</div>

		<div>Signup</div>

		<div>
			<label>Email: </label>
		</div>
		<div>
			<!--<input type="text" name="user[email_address]" /> -->
			<input type="text" name="sign_up[email_address]" />
		</div>
		<div>
			<label>Password: </label>
		</div>
		<div>
			<!--<input type="password" name="user[password]" /> -->
			<input type="password" name="sign_up[password]" /> 
		</div>
		<input type="submit" value="submit" />
	</form>	
</div>
